CONFIGURE_FILES = Makefile config.status config.cache config.h config.log

OBJS = parser.o hci.o l2cap.o rfcomm.o sdp.o
HDRS = parser.h
LIB  = libparser
LIB_VER = 0.1

LIB_A   = $(LIB).a
LIBS    = $(LIB_A)

CC      = @CC@
LD	= @LD@
AR	= @AR@
INSTALL = @INSTALL@

CFLAGS  = @CFLAGS@ -Wall

all: $(LIBS) 

$(LIB_A): $(OBJS)
	$(AR) -rs $(LIB_A) $(OBJS)

$(OBJS): $(HDRS)

clean:
	rm -f *.o *~ *.so.* *.so $(LIBS)

distclean: clean
	rm -f $(CONFIGURE_FILES)
