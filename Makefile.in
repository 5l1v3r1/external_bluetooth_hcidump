CONFIGURE_FILES = Makefile config.status config.cache config.h config.log

UTILS   = hcidump
PARSER  = parser/libparser.a

DUMP_OBJS = hcidump.o

SBINDIR = /usr/sbin
BINDIR  = /bin
ETCDIR  = /etc

CC	= @CC@
INSTALL = @INSTALL@

DEFS    = @DEFS@

CFLAGS  = @CFLAGS@ $(DEFS) -Wall -I. -I./parser
LDFLAGS = @LDFLAGS@ -L./parser

LIBS    = @LIBS@ -lparser

PARTS   = @PARTS@

all: $(UTILS)

$(PARSER): force
	@$(MAKE) -C parser all

hcidump: $(PARSER) $(PARTS) $(DUMP_OBJS)
	$(CC) $(LDFLAGS) $(DUMP_OBJS) $(PARTS) -o hcidump $(LIBS)

install: all
	$(INSTALL) -m 755 -o root -g root $(UTILS) $(SBINDIR)

clean:
	@$(MAKE) -C parser clean
	rm -f *.o *.tab.* *.lex.* $(UTILS)

distclean: clean
	@$(MAKE) -C parser distclean
	rm -f $(CONFIGURE_FILES)

force:;
